extends base.pug

block stylesheet
    link(rel="stylesheet" href="/static/css/login.css")

block content
    if errorMessage
        span=errorMessage
    div.login-container
        form.login-container__form(action="/login" method="post")
            h2.login-container__title 로그인
            div.login-container__id-block
                span ID
                input(type="text" name="id" placeholder="ID")
            div.login-container__pw-block
                span PW
                input(type="password" name="password" placeholder="PW")
            button.login-container__submit-btn 로그인
        div.auth-switch
            span 계정이 없나요? &nbsp;
            a(href="/join") 회원가입 하러가기 &rarr;