extends base.pug

block stylesheet
    link(rel="stylesheet" href="/static/css/join.css")

block content
    if errorMessage
        span=errorMessage

    div.join-container
        form.join-container__form-block(action="/join" method="post")
            h2.join-container__title 회원가입
            div.join-container__id-block
                span ID
                input(type="text" name="id" placeholder="ID")
            div.join-container__pw-block
                span PW
                input(type="password" name="password" placeholder="PW")
            div.join-container__name-block
                span 이름
                input(type="text" name="name" placeholder="NAME")
            button.join-container__submit-btn 가입하기
        div.auth-switch
            span 이미 계정이 있나요? &nbsp;
            a(href="/login") 로그인 하러가기 &rarr;