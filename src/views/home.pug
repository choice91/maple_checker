extends base.pug

block content
    div.home-container
        ul.home-container__menu
            li 일일퀘스트
            li 주간보스
            li 이벤트
        div.home-container__quest
            button.home-container__add-character 캐릭터추가
            button.home-container__delete-character 캐릭터삭제
            table
                thead
                    tr
                        th &nbsp;
                tbody
                    tr
                        td 소멸의 여로
                    tr
                        td 츄츄 아일랜드
                    tr
                        td 레헬른
                    tr
                        td 아르카나
                    tr
                        td 모라스
                    tr
                        td 에스페라
                    tr
                        td 세르니움(전)
                    tr
                        td 세르니움(후)
                    tr
                        td 호텔 아르크스
                    tr
                        td 오디움
    div.modal.modal--hidden
        div.modal__layer
            div.modal__input-block
                input#nickname.modal__input(type="text" placeholder="여기에 닉네임을 입력하세요" required)
                label.modal__label(for="nickname")
                    span 여기에 닉네임을 입력하세요
            div.modal__btn
                button.modal__submit 확인
                button.modal__cancel 취소

block script
    script(src="/static/js/home.js")