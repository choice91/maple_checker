extends base

block content
    div.login-container
        form.login-container__form(action="/login", method="post", onsubmit="return login(event)")
            h2.login-container__title 로그인
            div.login-container__id-block
                span ID
                input.login-container__id(type="text", name="id", placeholder="ID")
            div.login-container__pw-block
                span PW
                input.login-container__pw(type="password", name="password", placeholder="PW")
            button.login-container__submit-btn 로그인
        div.auth-switch
            span 계정이 없나요? &nbsp;
            a(href="/join") 회원가입 하러가기 &rarr;

        if errorMessage
            span=errorMessage

block script
    script(src="/static/js/login.js")